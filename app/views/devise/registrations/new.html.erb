<div class="content-container">
  <div class="home-background">
  </div>
  <div class="home-content">
    <div class="sign-up-form">
      <div class="sign-up-fields">
        <h2 class='form-h2'>Sign up</h2>

        <%= form_for(@new_user, url: user_registration_path(resource_name)) do |f| %>
        

          <%= f.email_field :email, placeholder: 'Email', autofocus: true, required: true %>

            <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} character min.)", autocomplete: "off", required: true %>

            <%= f.password_field :password_confirmation, placeholder: 'Re-enter Password', autocomplete: "off", required: true %>

            <%= f.hidden_field :role, value: 'disputant' %>

            <%= f.submit "Sign up", class: "btn btn-primary" %>
        <% end %>

        <%= link_to "or log in", new_session_path(resource_name), class: "toggle-entry"%>
      </div>
    </div>
  </div>
</div>