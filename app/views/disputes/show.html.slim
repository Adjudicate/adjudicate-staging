.disputes-background
.disputes-container
  .row
    .col-sm-8.col-sm-offset-2
      .row
        .dispute-title.h4 
          | Dispute no: 
          = @dispute.id
        br
        .dispute-title.h4
          | Dispute UID: 
          = @dispute.uid
      .row
        -if @disputant && !@dispute.survey.ended?
          = link_to "Vote", dispute_vote_path(@dispute.id, uid: @dispute.uid), class: "btn btn-primary edit-dispute-btn"
      .row    
        - if current_user.admin? 
          = link_to 'Edit Dispute', edit_dispute_url(@dispute, uid: params[:uid]), class: "btn btn-primary edit-dispute-btn"
      .row
        -if current_user.admin?
          = link_to "Delete Dispute", dispute_url(@dispute, uid: params[:uid]), :method => :delete, class: "btn btn-primary delete-dispute-btn", :data => {:confirm => "You Sure?"}
      .row
        h5 Dispute Reason
      .row
        = @dispute.reason
      .row
        h5 Violating Content
      .row
        = @dispute.violating_content
      .row
        | Files:
        - if @dispute.dispute_documents.present?
          - @dispute.dispute_documents.each_with_index do |dd, index|
            .row
              .col-sm-12
                = link_to truncate(dd.upload_file_name), dd.url, target: "_blank"
        - else
          | No files uploaded
      .row
        .results-header
          h5 Results
        .results-content
        - if @dispute.survey.ended?
          | Average vote:  
          = @dispute.survey.vote_average
          |  Standard Deviation: 
          = @dispute.survey.standard_deviation        
        - else 
          | Dispute is being voted on.  Results will be available after 
          = @dispute.survey.deadline.strftime('%D')
      .row
        hr
        h4 Comments
        - @comments.each do |comment|
          h4= comment.author
          p= comment.body
